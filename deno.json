{
  "description": "A helpdesc software",
  "tasks": {
    "backend": "cd ./backend && deno task",
    "frontend": "cd ./frontend && deno task"
  },
  "imports": {
    "@/": "./frontend/src/",
    "@backend/": "./backend/",
    "@frontend/": "./frontend/",
    "@shared/": "./shared/",
    "/": "./",
    "./": "./",
    "../": "../",
    "@db/sqlite": "jsr:@db/sqlite@^0.12.0",
    "@std/assert": "jsr:@std/assert@1",
    "@stdext/crypto": "jsr:@stdext/crypto@^0.1.0",
    "clsx": "npm:clsx@^2.1.1",
    "zod": "npm:zod@^3.24.1"
  },
  "fmt": {
    "files": {
      "include": [
        "./frontend/src/",
        "./backend/"
      ]
    },
    "useTabs": true,
    "lineWidth": 100,
    "indentWidth": 4,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "workspace": [
    "./frontend",
    "./backend"
  ],
  "nodeModulesDir": "auto"
}
